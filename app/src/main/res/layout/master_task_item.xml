<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/marginLg"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/task_checkable"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_check_box_outline_blank_black_24dp"
        android:backgroundTint="@color/colorWhite"
        android:clickable="false"
        android:paddingBottom="@dimen/marginSmall"/>

    <TextView
        android:id="@+id/task_title"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:onClick="OnTaskItemClick"
        android:textSize="@dimen/textInputSize"
        android:paddingTop="@dimen/marginMedRare"/>

    <ImageButton
        android:id="@+id/todo_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_delete_forever_black_24dp"
        android:clickable="true"
        android:onClick="deleteTask"
        android:backgroundTint="@color/colorWhite"
        android:paddingEnd="@dimen/marginMed"/>

<!--TODO:  NEED TO SET ON CLICK FOR CHECK BUTTON AND DELETE -->
</LinearLayout>